# ~/.zshrc - Synced Configuration
# Machine-specific overrides go in ~/.zshrc.local

# ----- PATH Configuration -----
export PATH="$HOME/bin:$HOME/.local/bin:$HOME/.bun/bin:$HOME/.npm-global/bin:/usr/local/bin:$PATH"

# ----- Oh My Zsh -----
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"

plugins=(
  zsh-autosuggestions
  zsh-syntax-highlighting
  git
)

source $ZSH/oh-my-zsh.sh

# ----- Editor -----
export EDITOR='cursor'
export VISUAL='cursor'

# ----- History Settings -----
HISTSIZE=10000
SAVEHIST=10000
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE
setopt SHARE_HISTORY

# ----- Bun -----
export BUN_INSTALL="$HOME/.bun"
[ -s "$BUN_INSTALL/_bun" ] && source "$BUN_INSTALL/_bun"

# ----- Aliases -----
# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ll="ls -la"
alias la="ls -A"

# Git (beyond what the git plugin provides)
alias gs="git status"
alias gp="git pull"
alias gd="git diff"

# Editor
alias code="cursor"

# Package managers
alias pn="pnpm"

# Claude shortcuts (from pondorasti)
alias cc="claude --dangerously-skip-permissions"

# ----- Machine-specific config -----
# Load local overrides if present (PATH additions, work-specific aliases, etc.)
[ -f ~/.zshrc.local ] && source ~/.zshrc.local
